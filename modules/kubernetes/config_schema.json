{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "host": {
      "type": "string",
      "format": "uri"
    },
    "insecure": {
      "type": "boolean",
      "default": false
    },
    "token": {
      "type": "string"
    },
    "client_key": {
      "type": "string"
    },
    "client_certificate": {
      "type": "string"
    },
    "cluster_ca_certificate": {
      "type": "string"
    }
  },
  "required": [
    "host"
  ],
  "anyOf": [
    {
      "required": [
        "token"
      ]
    },
    {
      "required": [
        "client_key",
        "client_certificate"
      ],
      "if": {
        "not": {
          "properties": {
            "insecure": {
              "const": true
            }
          }
        }
      },
      "then": {
        "required": [
          "cluster_ca_certificate"
        ]
      }
    }
  ]
}